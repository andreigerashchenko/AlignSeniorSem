<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 9
        spacing: 18
        canvas.before:
            Color:
                rgba: 0,0,0.768,1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout: 
            orientation: "horizontal"
            padding: 9
            spacing: 10

            canvas.before:
                Color:
                    rgba: 0.7,0,0.768,1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                size_hint: 1,0.5
                pos_hint: {'center_x ': 0.91, 'top': 1}
                background_normal: '/Users/rush/Desktop/senSem/heyHorizon/tryingtransitions/images/help button.png'
                background_down: '/Users/rush/Desktop/senSem/heyHorizon/tryingtransitions/images/help buttonDown.png'
                size: 50,50
                size_hint: None, None


            FitImage:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: 0.751,0.651
                source: "imgassets/r1.jpg"
                radius: [20,]
                allow_stretch: False
                keep_ratio: True

            Label:
                text:" "
                size_hint: 0.05,0.5
                pos_hint: {'center_x ': 0.91, 'top': 1}
                

        BoxLayout: 
            canvas.before:
                Color:
                    rgba: 0.3,0.5,0.768,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: "horizontal"
            size_hint: 1, 0.1
            padding: 19
            spacing: 8
            Label:
                text: "Queue"

            #include from another kivy file the carousel widget as the queue
                
            Label:
                text: " "


        BoxLayout:

            canvas.before:
                Color:
                    rgba: 0.3,0.5,0.768,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: "horizontal"
            size_hint: 1, 0.35
            padding: 18
            spacing: 18

            BoxLayout: 
                canvas.before:
                    Color:
                        rgba: 0.43,0.5,0.768,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                #progression_value: 25
                orientation: 'vertical'
                pos_hint: {'x':.5}
                ProgressBar:
                    id: my_progress_bar
                    # Set Default Value
                    # value: .25
                    min: 0
                    max: 100
                    pos_hint: {'x':.1}
                    size_hint_x: 0.45
                    size_hint_y: 0.2

           
                #MDProgressBar:
                   # value: root.progression_value
                   # id: my_progress_bar2
                   # min: 0
                    #max: 100
                   # pos_hint: {'x':.1}
                    #color: 0,1,0,0
                    #size_hint_y:None
                    #height:dp(48)  
   

                
                #delete this button when implementing the progress bar function
                Button:
                    size_hint: 0.12,0.15
                    id: increment
                    text: "Press Me!"
                    on_press: root.press_it()

            GridLayout:
                cols: 2
                rows: 2
                
                Switch:
                    size_hint: 0.2,0.425
                    id: my_switch
                    active: True
                    disabled: False
                    font_size: 32

                Switch:
                    size_hint: 0.32,0.425
                    id: my_switch
                    active: True
                    disabled: False
                    font_size: 32

                Switch:
                    background_color: 1,0.5,1,0.9
                    size_hint: 0.32,0.425
                    id: my_switch
                    active: True
                    disabled: False
                    font_size: 32

                Switch:
                    background_color: 1,0.5,0,0.9
                    size_hint: 0.32,0.45
                    id: my_switch
                    active: True
                    disabled: False
                    font_size: 32



